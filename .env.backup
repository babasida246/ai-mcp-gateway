# MCP Server Configuration
MCP_SERVER_NAME=ai-mcp-gateway
MCP_SERVER_VERSION=0.1.0

# API Keys for LLM Providers
OPENROUTER_API_KEY=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
ANTHROPIC_API_KEY=your_anthropic_key_here
OPENAI_API_KEY=your_openai_key_here

# OpenRouter Configuration
# Models để fallback khi các provider khác fail (phân tách bằng dấu phẩy)
OPENROUTER_FALLBACK_MODELS=x-ai/grok-beta,qwen/qwen-2.5-coder-32b-instruct,meta-llama/llama-3.1-8b-instruct:free
# Model OpenRouter thay thế cho OpenAI
OPENROUTER_REPLACE_OPENAI=openai/gpt-4o-mini
# Model OpenRouter thay thế cho Claude
OPENROUTER_REPLACE_CLAUDE=anthropic/claude-3.5-sonnet

# OSS/Local Model Configuration (optional)
OSS_MODEL_ENDPOINT=http://localhost:11434
OSS_MODEL_ENABLED=false
OSS_MODEL_NAME=llama3:8b

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# PostgreSQL Database Configuration
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/ai_mcp_gateway
DB_HOST=postgres
DB_PORT=5432
DB_NAME=ai_mcp_gateway
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL=false

# HTTP API Configuration
API_PORT=3000
API_HOST=0.0.0.0
API_CORS_ORIGIN=*

# Logging
LOG_LEVEL=info
LOG_FILE=logs/ai-mcp-gateway.log

# Routing Configuration
DEFAULT_LAYER=L0
ENABLE_CROSS_CHECK=true
ENABLE_AUTO_ESCALATE=true
MAX_ESCALATION_LAYER=L2

# Cost Tracking
ENABLE_COST_TRACKING=true
COST_ALERT_THRESHOLD=1.00

# Mode: mcp (stdio) or api (HTTP server)
MODE=mcp
